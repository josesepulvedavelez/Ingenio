@model IEnumerable<Ingenio.WebClient.Models.Clima>

@{
    ViewBag.Title = "Listado de clima de ciudades";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Nuevo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temperatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Humendad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Viento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Temperatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Humendad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Viento)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Actualizar", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.Id })
        </td>
    </tr>
}

</table>
